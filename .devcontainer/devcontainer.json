{
    "name": "accessible-pdf-rocky (React + .NET + Workers + Python)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit",
                "ms-azuretools.vscode-docker",
                "ms-vscode.vscode-node-azure-pack",
                "ms-vscode.js-debug",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "bradlc.vscode-tailwindcss",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                "files.insertFinalNewline": true,
                "dotnet.server.useOmnisharp": true,
                "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "none",
                "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "none",
                "omnisharp.enableRoslynAnalyzers": false,
                "omnisharp.enableImportCompletion": false,
                "omnisharp.enableEditorConfigSupport": false,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit"
                    }
                }
            }
        }
    },
    "containerEnv": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://0.0.0.0:5165",
        "DB_API_URL": "http://db-api:8787",
        "DB_API_TOKEN": "dev-token",
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_SYSTEM_GLOBALIZATION_INVARIANT": "false",
        "DOTNET_ROOT": "/usr/share/dotnet"
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "remoteUser": "vscode",
    "forwardPorts": [
        5173,
        5165,
        8787
    ],
    "portsAttributes": {
        "5173": {
            "label": "Vite Dev Server"
        },
        "5165": {
            "label": "ASP.NET HTTP API"
        },
        "8787": {
            "label": "Database API Worker"
        }
    }
}
